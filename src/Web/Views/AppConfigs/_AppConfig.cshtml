<v-dialog v-model="dialog" fullscreen hide-overlay transition="dialog-bottom-transition">
    <template v-slot:activator="{ on }">
        <v-btn color="primary" dar class="mb-2" v-on="on">Add</v-btn>
    </template>
    <v-card>
        <v-toolbar dark color="primary">
            <v-btn icon dark v-on:click="close">
                <v-icon>mdi-close</v-icon>
            </v-btn>
            <v-toolbar-title>{{ formTitle }}</v-toolbar-title>
            <v-spacer></v-spacer>
            <v-toolbar-items>
                <v-btn dark text
                        v-on:click="save"
                        :disabled="!valid">Save</v-btn>
            </v-toolbar-items>
        </v-toolbar>

        <v-container>
            <v-form v-model="valid" ref="form" lazy-validation>
                <v-text-field v-model="editedItem.key"
                              :rules="keyRules"
                              :counter="100"
                              label="Key"
                              :disabled="editedIndex > -1"
                              required>
                </v-text-field>
                <v-text-field v-model="editedItem.description"
                              :counter="255"
                              label="Description">
                </v-text-field>
                <v-textarea v-model="editedItem.value"
                            :counter="10000"
                            label="Value">
                </v-textarea>
                <v-checkbox v-model="editedItem.sensitive"
                            label="Sensitive"></v-checkbox>
            </v-form>
        </v-container>

    </v-card>
</v-dialog>
