<v-dialog v-model="dialog" fullscreen hide-overlay transition="dialog-bottom-transition">
    <template v-slot:activator="{ on }">
        <v-btn color="primary" dar class="mb-2" v-on="on">Add</v-btn>
    </template>
    <v-card>
        <v-toolbar dark color="primary">
            <v-btn icon dark v-on:click="close">
                <v-icon>mdi-close</v-icon>
            </v-btn>
            <v-toolbar-title>{{ formTitle }}</v-toolbar-title>
            <v-spacer></v-spacer>
            <v-toolbar-items>
                <v-btn dark text
                        v-on:click="save"
                        :disabled="!valid">Save</v-btn>
            </v-toolbar-items>
        </v-toolbar>

        <v-container>
            <v-form v-model="valid" ref="form" lazy-validation>

                <v-select :items="objectNames"
                          v-model="editedItem.objectName"
                          item-text="name"
                          item-value="name"
                          :disabled="editedIndex > -1"
                          label="Object Name">

                </v-select>

                <v-text-field v-model="editedItem.name"
                              :rules="[v => !!v || 'Name is required', v => v.length <= 50 || 'Name must be less than 51 characters']"
                              :counter="50"
                              label="Name"
                              :disabled="editedIndex > -1"
                              required>
                </v-text-field>

                <v-text-field v-model="editedItem.displayName"
                              :rules="[v => !!v || 'Display Name is required', v => v.length <= 50 || 'Display Name must be less than 51 characters']"
                              :counter="50"
                              label="Name Display"
                              required>
                </v-text-field>

                <v-select :items="dataTypes"
                          v-model="editedItem.dataType"
                          item-text="name"
                          item-value="name"
                          :disabled="editedIndex > -1"
                          label="Data Type">

                </v-select>

            </v-form>
        </v-container>

    </v-card>
</v-dialog>
